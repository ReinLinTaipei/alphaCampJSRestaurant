{{!-- show restaurant details on ./views/show.handlebars--}}
<style>
  @import url('/css/show.css');
</style>
<h1 class="mb-1 restaurant-show-title">
  {{restaurant.name}}
</h1>
<div class="container">
  <div class="col-12 col-md-10 mx-auto">
    <div class="row">
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          Category:
        </span>
        {{restaurant.category}}
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          Address:
        </span>
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          {{restaurant.location}}
        </a>
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          Telephone:
        </span>
        {{restaurant.phone}}
      </p>
      <p class="mb-5">
        {{restaurant.description}}
      </p>
      <img src="{{restaurant.image}}" alt="" class="rounded mx-auto d-block mb-4 w-100" style="max-width: 600px;">
    </div>
  </div>
</div>